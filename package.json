{
  "name": "root",
  "version": "1.12.2",
  "private": true,
  "scripts": {
    "start": "npm run build && lerna run --ignore actionsflow-workflow* --parallel start",
    "reset": "lerna clean && lerna bootstrap --no-ci",
    "clean": "lerna run --ignore actionsflow-workflow* clean && rimraf ./.cache ./.actionsflow ./dist ./coverage",
    "build": "lerna exec --ignore actionsflow-workflow* --ignore @actionsflow/trigger-typeform --ignore @actionsflow/trigger-google_form --ignore @actionsflow/trigger-trello -- npm run build ",
    "lerna:publish": "node scripts/publish.js",
    "update:dependencies": "lerna exec -- npm update && npm run bootstrap",
    "test": "npm run lint && jest",
    "coverage": "jest --coverage",
    "lint": "npm-run-all --continue-on-error -p lint:code lint:docs lint:other",
    "format": "npm run format:code && npm run format:other",
    "commit": "npx git-cz",
    "cm": "npm run commit --",
    "cz": "npm run commit --",
    "jest": "rimraf ./.actionsflow ./.cache ./dist && jest",
    "test:watch": "jest --watch",
    "lint:code": "eslint --cache --ext .js,.ts .",
    "check:docs": "remark . --quiet --ext md",
    "lint:docs": "cross-env NODE_ENV=production npm run check:docs",
    "lint:other": "npm run prettier -- --check",
    "lint-staged": "lint-staged",
    "remark": "remark",
    "format:other": "npm run prettier -- --write",
    "format:code": "npm run lint:code -- --fix",
    "prettier": "prettier \"**/*.{md,json,js,ts,yaml,yml}\"",
    "prebootstrap": "npm i",
    "bootstrap": "npm run check-versions && npx lerna bootstrap --hoist",
    "check-versions": "node scripts/check-versions.js",
    "check-repo-fields": "node scripts/check-repo-fields.js",
    "lerna": "npx lerna",
    "plop": "plop",
    "build:example": "rimraf ./.cache ./.actionsflow && lerna exec --scope actionsflow-workflow-example -- npm run clean && lerna exec --scope actionsflow-workflow-example -- npm run build --",
    "start:example": "lerna exec --scope actionsflow-workflow-example -- npm run start --",
    "act:example": "lerna exec --scope actionsflow-workflow-example  -- npm run act --",
    "clean:example": "lerna run clean --scope actionsflow-workflow-example",
    "actionsflow": "./packages/actionsflow/cli.js",
    "hooks:uninstall": "node node_modules/husky/husky.js uninstall",
    "hooks:install": "node node_modules/husky/husky.js install",
    "ts": "ts-node",
    "release-it": "release-it",
    "release": "node scripts/release.js",
    "copy:readme": "node scripts/copy-readme.js"
  },
  "devDependencies": {
    "@commitlint/cli": "^9.1.1",
    "@commitlint/config-conventional": "^10.0.0",
    "@commitlint/config-lerna-scopes": "^11.0.0",
    "@release-it/conventional-changelog": "^2.0.0",
    "@theowenyoung/remark-lint-no-dead-urls": "^1.1.0",
    "@types/fs-extra": "^9.0.13",
    "@types/jest": "^27.0.3",
    "@types/node": "^16.11.11",
    "@typescript-eslint/eslint-plugin": "^3.9.0",
    "@typescript-eslint/parser": "^3.9.0",
    "axios": "^0.28.0",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.0.1",
    "cz-emoji": "^0.2.0",
    "dictionary-en": "^3.0.1",
    "dotenv": "^8.2.0",
    "eslint": "^7.10.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-jest": "^23.20.0",
    "exec-sh": "^0.3.4",
    "fs-extra": "^10.0.0",
    "git-cz": "^4.7.1",
    "glob": "^7.1.6",
    "husky": "^4.3.0",
    "jest": "^27.4.1",
    "lerna": "^8.1.3",
    "lint-staged": "^10.4.0",
    "micromatch": "^4.0.2",
    "npm-run-all": "^4.1.5",
    "plop": "^3.0.1",
    "prettier": "^2.1.2",
    "rehype-autolink-headings": "^4.0.0",
    "release-it": "^17.3.0",
    "remark-cli": "^10.0.1",
    "remark-frontmatter": "^2.0.0",
    "remark-lint": "^7.0.1",
    "remark-preset-lint-markdown-style-guide": "^3.0.1",
    "remark-preset-lint-recommended": "^4.0.1",
    "remark-retext": "^4.0.0",
    "remark-validate-links": "^10.0.2",
    "retext-diacritics": "^3.0.0",
    "retext-emoji": "^7.0.1",
    "retext-english": "^3.0.4",
    "retext-indefinite-article": "^2.0.1",
    "retext-redundant-acronyms": "^3.0.0",
    "retext-sentence-spacing": "^4.0.0",
    "retext-spell": "^4.0.0",
    "retext-syntax-mentions": "^2.1.1",
    "retext-syntax-urls": "^2.0.0",
    "rimraf": "^3.0.2",
    "semver": "^7.3.2",
    "ts-jest": "^27.0.7",
    "ts-node": "^10.4.0",
    "tslib": "^2.3.1",
    "typescript": "^4.5.2",
    "unified": "^9.1.0",
    "yargs": "^16.0.3"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  }
}
